<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical" >

        <Button
            android:id="@+id/bStock"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Stock" />

        <Button
            android:id="@+id/bGreenHex"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bStock"
            android:layout_marginTop="30dp"
            android:text="GreenHex" />

        <Button
            android:id="@+id/bLDPurple"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bGreenHex"
            android:layout_marginTop="30dp"
            android:text="Light Dark Purple" />

        <Button
            android:id="@+id/bNightSky"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bLDPurple"
            android:layout_marginTop="30dp"
            android:text="Night Sky" />

        <Button
            android:id="@+id/bPBLue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bNightSky"
            android:layout_marginTop="30dp"
            android:text="Purple Blue" />

        <Button
            android:id="@+id/bRainbow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bPBLue"
            android:layout_marginTop="30dp"
            android:text="Rainbow" />

        <Button
            android:id="@+id/bRBlueO"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bRainbow"
            android:layout_marginTop="30dp"
            android:text="Red Blue Orange" />

        <Button
            android:id="@+id/bWBlack"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bRBlueO"
            android:layout_marginTop="30dp"
            android:text="White Black" />
        
         <Button
            android:id="@+id/bWood"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bWBlack"
            android:layout_marginTop="30dp"
            android:text="Wood" />
         
         <Button
            android:id="@+id/bWBlue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bWood"
            android:layout_marginTop="30dp"
            android:text="White Blue" />
         
    </RelativeLayout>

</ScrollView>